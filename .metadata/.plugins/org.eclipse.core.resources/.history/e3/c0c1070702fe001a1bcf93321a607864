package whileclass;

public class mainclass {

	public static void main(String[] args) {
		/*
		   
		   loop
		      for 
		            반복문                조건이 맞아야 탈출
		      for(초기화 ; 조건식; 연산식){
		                   처리
                }
               
              while <-for문 보다 무한루프 가능성 높음
                        
                        변수의 선언
                        초기화
             while(조건식){        if(조건식)
                                   처리
                                   연산식
                 }       		  
		 */

		int w;
		w = 0;
		while(w<10) {
			System.out.println("w="+w);
			w++;
		}
		
		w = 0;
		while(true){
			System.out.println("w="+w);
			w++;
		}
		
		/*
		 initialize (초기화)
		 w = 0
		 
		 loop(순환)
		 while(){
		 
		 }
		 
		 release(해방)
		 
		 */
		
	  
		
		
		
		
	}

}
